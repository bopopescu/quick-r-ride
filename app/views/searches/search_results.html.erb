<body>
  <%= render 'partial/header' %>
  <div class="container" style="background-color: #8e887c0f;">
  <section class="ftco-section">
  	<div class="container-fluid px-4">
  		<div class="row justify-content-center">
        <div class="col-md-12 heading-section text-center ftco-animate mb-5">
        	<span class="subheading">What we offer</span>
          <h2 class="mb-2">Choose Your Car</h2>
        </div>
      </div>
      <% @vehicle.each do |vehicles| %>
	  		<div class="row">
          <% vehicles.each do |v| %>
	  			<div class="col-md-4">
    				<div class="car-wrap ftco-animate">
    					<div class="img d-flex align-items-end" style='background-image: url(<%= v.image_url%>);'>
    						<div class="price-wrap d-flex">
    							<span class="rate">$25</span>
    							<p class="from-day">
    								<span>From</span>
    								<span>/Day</span>
    							</p>
    						</div>
    					</div>
    					<div class="text p-4 text-center">
    						<h2 class="mb-0"><a href="#">Mercedes Grand Sedan</a></h2>
    						<span>Audi</span>
    						<p class="d-flex mb-0 d-block"><a href="#" class="btn btn-black btn-outline-black mr-1">Book now</a> <a href="#" class="btn btn-black btn-outline-black ml-1">Details</a></p>
    					</div>
    				</div>
    		  </div>
    		  <% end %>
    		</div>
  		<% end %>
  	</div>
  </section>
</div>
</body>